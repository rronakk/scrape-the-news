<h1>Scrape-the-News</h1>
<p>Scraping hot news of stock market</p>
<div class="row">
    <div class="col s12 m6 center">
        <button class="btn waves-effect waves-light grey darken-4" type="submit" name="action" id="street-scrape">Fetch Latest Articles from "The Street"
            <i class="material-icons right"></i>
        </button>
    </div>
</div>

{{#each article}}
    <div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-3">
            <div class="card-content white-text">
                <span class="card-title">{{title}}</span>
                <p>{{summary}}</p>
            </div>
            <div class="card-action">
                <a href="{{link}}">{{link}}</a>
            </div>
        </div>
    </div>
    </div>
{{/each}}
