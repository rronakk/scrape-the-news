<h1>Scrape-the-News</h1>
<p>Scraping hot news of stock market</p>
<div class="row">
    <div class="col s12 m6 center">
        <button class="btn waves-effect waves-light grey darken-4" type="submit" name="action" id="street-scrape">Fetch Latest Articles from "The Street"
            <i class="material-icons right"></i>
        </button>
    </div>
</div>

{{#each article}}
    <div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-3">
            <div class="card-content white-text">
                <a href="{{link}}" target="_blank">
                    <span class="card-title">{{title}}</span></a>
                <a class="btn-floating halfway-fab waves-effect waves-light red left"><i class="material-icons">comment</i></a>
                <p>{{summary}}</p>
            </div>
            <div class="card-action center" data-id="{{_id}}">
                <a class="btn-floating halfway-fab waves-effect waves-light red "><i class="material-icons">save</i></a>
            </div>
        </div>
    </div>
    </div>
{{/each}}
