<h1>Scrape-the-News</h1>
<p>Scraping hot news of stock market</p>
<div class="row">
    <div class="col s12 m6 center">
        <button class="btn waves-effect waves-light grey darken-4" type="submit" name="action" id="street-scrape">Fetch Latest Articles from "The Street"
            <i class="material-icons right"></i>
        </button>
    </div>
</div>

{{#each article}}
    <div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-3" >
            <div class="card-content white-text" >
                <a href="{{link}}" target="_blank">
                    <span class="card-title">{{title}}</span></a>
                <a data-id="{{_id}}" class="btn-floating halfway-fab waves-effect waves-light red left modal-trigger" href="#comment-model"><i class="material-icons">comment</i></a>
                <p>{{summary}}</p>
            </div>
            <div class="card-action center" data-id="{{_id}}">
                <a class="btn-floating halfway-fab waves-effect waves-light red "><i class="material-icons">favorite</i></a>
            </div>
        </div>
    </div>
    </div>
    <!-- Modal Structure -->
    <div id="comment-model" class="modal bottom-sheet">
        <div class="modal-content">
            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">comment</i>
                            <textarea id="icon_prefix2" class="materialize-textarea"></textarea>
                            <label for="icon_prefix2">Comment Title</label>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">mode_edit</i>
                                <textarea id="icon_prefix2" class="materialize-textarea"></textarea>
                                <label for="icon_prefix2">Comment Body</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="modal-footer">
            <a href="#!" class="modal-close waves-effect waves-green btn-flat">Save</a>
            <a href="#!" class="modal-close waves-effect waves-green btn-flat">Cancel</a>
        </div>
    </div>

{{/each}}

